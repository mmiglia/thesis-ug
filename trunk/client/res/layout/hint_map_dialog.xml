<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/hint_map_dialog_root"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              >
    

    <TextView android:id="@+id/hint_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:layout_below="@+id/hint_marker"
              />
    <TextView android:id="@+id/hint_street"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:layout_below="@+id/hint_title"
              />
	
	<Button
		android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Ok"
        android:layout_below="@+id/hint_street"/>
        
	<Button
		android:id="@+id/btn_take_me_there"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Take me there"
        android:layout_toRightOf="@+id/btn_ok"
        android:layout_below="@+id/hint_street"/>
               
</RelativeLayout>