<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:paddingTop="20dip"
	android:background="@drawable/widget_bg_normal">
	
		<Button 
			android:id="@+id/widget_btn_prev_task"
			android:layout_gravity="left"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:background="@drawable/btn_left"/> 
		
		<TextView
			android:id="@+id/widget_txt_task"
			android:layout_width="210dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|center"
			android:text="Task"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:layout_toRightOf="@+id/widget_btn_prev_task"
		    android:layout_alignBaseline="@+id/widget_btn_prev_task"/>
		
		
		<Button 
			android:id="@+id/widget_btn_next_task"
			android:layout_gravity="right"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/widget_txt_task"
			android:background="@drawable/btn_right"/> 

		<Button 
			android:id="@+id/widget_btn_prev_hint"
			android:layout_gravity="center_horizontal|center"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_below="@+id/widget_btn_prev_task"
			android:background="@drawable/btn_left"/>
		    
		<TextView
			android:id="@+id/widget_txt_hint"
			android:layout_width="210dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|center"
			android:text="Task"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:layout_toRightOf="@+id/widget_btn_prev_hint"
		    android:layout_alignBaseline="@+id/widget_btn_prev_hint"/> 
				
		<Button 
			android:id="@+id/widget_btn_next_hint"
			android:layout_gravity="center_horizontal|center"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/widget_txt_hint"
			android:layout_alignBaseline="@+id/widget_btn_prev_hint"
			android:background="@drawable/btn_right"/>

	   <Button 
			android:id="@+id/widget_btn_search_hint"
			android:text="SearchForHints"
			android:layout_gravity="left"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_below="@+id/widget_btn_prev_hint"/>
		
		<Button 
			android:id="@+id/widget_btn_hint_list"
		   	android:text="HintList"
			android:layout_gravity="right"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/widget_btn_search_hint"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_alignBaseline="@+id/widget_btn_search_hint"/>

		<Button 
			android:id="@+id/widget_btn_todo_list"
		   	android:text="Todo list"
			android:layout_gravity="right"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/widget_btn_hint_list"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_alignBaseline="@+id/widget_btn_hint_list"/>
		
</RelativeLayout>