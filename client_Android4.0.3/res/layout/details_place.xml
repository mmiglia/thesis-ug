<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TableLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1">
 
  
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip">
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/object_title"
            android:text="@string/object_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="3dip" />
        <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/title"
        	android:layout_marginTop="15dip"
			android:layout_alignParentRight="true"/>
        <TextView
        	android:id="@+id/object_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_below="@id/object_title"
        	android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="3dip" />
    </RelativeLayout>
    
    <View
        android:layout_height="1dip"
        android:background="#FF333333" />
        
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip">
        <TextView
        	android:id="@+id/street_address_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/street_address_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="3dip" />
        <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/calendar"
        	android:layout_marginTop="15dip"
			android:layout_alignParentRight="true"/>
        <TextView
        	android:id="@+id/street_address_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_below="@id/street_address_title"
        	android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="3dip" />
    </RelativeLayout>
    
    <View
        android:layout_height="1dip"
        android:background="#FF333333" />
        
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip">
        <TextView
        	android:id="@+id/street_number_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/street_number_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="3dip" />
        <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/tab_activity_w"
        	android:layout_marginTop="25dip"
			android:layout_alignParentRight="true"/>
        <TextView
        	android:id="@+id/street_number_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_below="@id/street_number_title"
        	android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="3dip" 
            android:paddingLeft="3dip"/>
 
    </RelativeLayout>

    <View
        android:layout_height="1dip"
        android:background="#FF333333" />
        
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip">
        <TextView
        	android:id="@+id/cap_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/cap"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="3dip" />
       <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/priority"
        	android:layout_marginTop="15dip"
			android:layout_alignParentRight="true"/>
        <TextView
        	android:id="@+id/cap_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:layout_below="@id/cap_title"
        	android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="3dip"/>
	
    </RelativeLayout>
    
        <View
        android:layout_height="1dip"
        android:background="#FF333333" />
        
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip">
        <TextView
        	android:id="@+id/city_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/city"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="3dip" />
       <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/priority"
        	android:layout_marginTop="15dip"
			android:layout_alignParentRight="true"/>
        <TextView
        	android:id="@+id/city_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:layout_below="@id/city_title"
        	android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="3dip"/>
	
    </RelativeLayout>
    
        <View
        android:layout_height="1dip"
        android:background="#FF333333" />
        
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip">
        <TextView
        	android:id="@+id/category_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/category_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="3dip" />
       <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/priority"
        	android:layout_marginTop="15dip"
			android:layout_alignParentRight="true"/>
        <TextView
        	android:id="@+id/category_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:layout_below="@id/category_title"
        	android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="3dip"/>
    </RelativeLayout>
    
    <View
        android:layout_height="1dip"
        android:background="#FF333333" />
        
    
      <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip">
        <TextView
        	android:id="@+id/lat_lng_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/lat_lng"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="3dip" />
       <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/priority"
        	android:layout_marginTop="15dip"
			android:layout_alignParentRight="true"/>
        <TextView
        	android:id="@+id/lat_lng_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:layout_below="@id/lat_lng_title"
        	android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="3dip"/>
            
            <Button 
			android:id="@+id/btn_streetview"
			android:layout_width="fill_parent" 
			android:layout_height="50dip" 
			android:layout_below="@+id/lat_lng_text"
			android:text="Look the place!" 
			android:layout_margin="3dip"
			android:layout_alignParentBottom="true"
			/>
    </RelativeLayout>
    
   
    </TableLayout>
  </ScrollView>

