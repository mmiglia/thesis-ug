<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:paddingLeft="2dip"
    	android:paddingRight="1dip">
	
		<!--CLIENT STATUS  -->
		<TextView 
			android:id="@+id/client_status" 
			android:layout_height="wrap_content" 
			android:text="@string/client_status" 
			android:textStyle="normal|bold" 
			android:gravity="center_vertical|center_horizontal" 
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="fill_parent"
			android:layout_marginTop="10dip">
		</TextView>
		<TextView 
			android:id="@+id/client_ver_title" 
			android:layout_height="wrap_content"
			android:text="@string/client_ver"
			android:textStyle="normal|bold"  
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>	
		<TextView 
			android:id="@+id/client_ver_value" 
			android:layout_height="wrap_content" 
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>
		
		<!--SERVER STATUS  -->
		<TextView 
			android:id="@+id/server_status" 
			android:layout_height="wrap_content" 
			android:text="@string/server_status" 
			android:textStyle="normal|bold" 
			android:gravity="center_vertical|center_horizontal" 
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="fill_parent"
			android:layout_marginTop="10dip">
		</TextView>
	
		<TextView 
			android:id="@+id/server_name_title" 
			android:layout_height="wrap_content"
			android:text="@string/current_server"
			android:textStyle="normal|bold"  
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>	
		<TextView 
			android:id="@+id/server_name_value" 
			android:layout_height="wrap_content" 
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>
		<TextView 
			android:id="@+id/server_ver_title" 
			android:layout_height="wrap_content"
			android:text="@string/server_ver"
			android:textStyle="normal|bold"  
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>	
		<TextView 
			android:id="@+id/server_ver_value" 
			android:layout_height="wrap_content" 
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>
		<TextView 
			android:id="@+id/server_connection_status_title" 
			android:layout_height="wrap_content"
			android:textStyle="normal|bold"
			android:text="@string/connection_status"  
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>	
		<TextView 
			android:id="@+id/server_connection_status_value" 
			android:layout_height="wrap_content" 
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent"
			android:layout_marginTop="3dip">
		</TextView>
		
		
		<!--LOCATION PROVIDER STATUS  -->
		<TextView 
			android:id="@+id/location_provider_status" 
			android:layout_height="wrap_content" 
			android:text="@string/location_service_status" 
			android:textStyle="normal|bold"
			android:textAppearance="?android:attr/textAppearanceLarge" 
			android:gravity="center_vertical|center_horizontal" 
			android:layout_width="fill_parent"
			android:layout_marginTop="10dip">
		</TextView>
		<TextView 
			android:id="@+id/location_provider_status_title" 
			android:layout_height="wrap_content"
			android:textStyle="normal|bold"
			android:text="@string/location_provider_status"  
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>	
		<TextView 
			android:id="@+id/location_provider_status_value" 
			android:layout_height="wrap_content" 
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent">
		</TextView>
		
		
		<!--CURRENT POSITION STATUS  -->
			<TextView 
			android:id="@+id/current_position_status" 
			android:layout_height="wrap_content" 
			android:text="@string/current_position_status" 
			android:textStyle="normal|bold" 
			android:textAppearance="?android:attr/textAppearanceLarge" 
			android:gravity="center_vertical|center_horizontal" 
			android:layout_width="fill_parent"
			android:layout_marginTop="10dip">
		</TextView>
		<TextView 
			android:id="@+id/current_position_status_latitude" 
			android:layout_height="wrap_content" 
			android:textStyle="normal" 
			android:textAppearance="?android:attr/textAppearanceMedium" 
			android:layout_width="fill_parent">
		</TextView>
		<TextView 
			android:id="@+id/current_position_status_longitude" 
			android:layout_height="wrap_content" 
			android:textStyle="normal" 
			android:textAppearance="?android:attr/textAppearanceMedium" 
			android:layout_width="fill_parent">
		</TextView>
	</LinearLayout>
</ScrollView>
